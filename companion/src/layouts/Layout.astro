---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import GeneralMenu from '../components/GeneralMenu';
import HelpMenu from '../components/HelpMenu.astro';
const url = Astro.url;
const onlineVersion = `${url.protocol}//online.${url.host}`;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <style>
      @font-face {
        font-family: Inter;
        src: url('/Inter.ttf');
      }
    </style>
  </head>
  <body class='flex flex-col'>
    <GeneralMenu client:only='solid-js' url={onlineVersion} />
    <div class='flex justify-around w-full h-full overflow-hidden'>
      <div>
        <HelpMenu />
      </div>
      <slot />
      <div></div>
    </div>
    <script>
      import 'uno.css';
    </script>
  </body>
  <style is:global>
    html {
      font-family: 'Inter', 'Roboto', monospace;
      background-color: #f6f6f6;
      margin: 0;
      overflow: hidden;
    }
    body {
      margin: 0;
    }
    code {
      font-family: 'Inter', Monaco, Lucida Console, Liberation Mono,
        DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      background-color: gainsboro;
      padding: 4px;
      font-size: small;
      border-radius: 4px;
    }
  </style>
</html>
