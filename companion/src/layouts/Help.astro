---
export interface Props {
  children: any;
  title: string;
}

import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article>
    <slot />
  </article>
  <style>
    article {
      grid-area: article;
      display: flex;
      flex-direction: column;
      overflow: auto;
      padding: 8px;
    }
  </style>
</Layout>
